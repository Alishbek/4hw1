<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lifetrack"
    tools:context=".RegistrationNumberFragment">

    <ImageView
        android:layout_width="472dp"
        android:layout_height="184dp"
        android:src="@drawable/vector_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/flame"
        app:layout_constraintBottom_toBottomOf="@id/appTv"
        app:layout_constraintEnd_toStartOf="@id/appTv"
        app:layout_constraintTop_toTopOf="@id/appTv" />

    <TextView
        android:id="@+id/appTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:paddingStart="12dp"
        android:text="LifeTrack"
        android:textColor="@color/white"
        android:textSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите номер телефона"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/numberEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/purple_rectangle_app"
            android:hint="Номер"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите код"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/codeEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/purple_rectangle_app"
            android:hint="Код"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="72dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sendNumberBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/violet_rectangle_solid"
                android:text="Отправить номер"
                android:textColor="@color/white"
                android:backgroundTint="@color/app_purple"/>

            <Button
                android:id="@+id/sendCodeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/violet_rectangle_solid"
                android:text="Отправить код"
                android:textColor="@color/white"
                android:backgroundTint="@color/app_purple"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>